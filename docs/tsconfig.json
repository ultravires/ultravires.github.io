{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "jsx": "preserve",
    "paths": {
      "@theme/*": ["./.vitepress/theme/*"]
    },
    "types": ["vitepress"]
  },
  "include": ["./.vitepress/**/*", "src/**/*"]
}
